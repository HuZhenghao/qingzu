/* pages/collect/collect.wxss */
.good {
  box-sizing: border-box;
  width: 100%;
  height: 180rpx;
  border-bottom: 1px solid #eee;
  position: relative;
  font-size: 0;
  overflow: hidden;
}

.inner {
  position: absolute;
  right: 0;
  top: 0;
  box-sizing: border-box;
  width: 100%;
  height: 180rpx;
  padding: 30rpx 30rpx;
  clear: both;
  overflow: hidden;
  /* transition: all 0.5s; */
}

.good-img {
  width: 120rpx;
  height: 120rpx;
  float: left;
}

.text {
  box-sizing: border-box;
  float: left;
  width: 570rpx;
  height: 120rpx;
  padding-left: 20rpx;
}

.title {
  position: relative;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 17px;
  color: #000;
  font-weight: 800;
}

.price {
  position: absolute;
  right: 0;
  font-size: 13px;
  color: #fd8d37;
}

.intro {
  height: 70rpx;
  font-size: 13px;
  color: #a9a9a9;
  overflow: hidden;
}

.delete {
  height: 180rpx;
  width: 100rpx;
  line-height: 180rpx;
  text-align: center;
  font-size: 16px;
  background-color: #f00;
  color: #fff;
  position: absolute;
  right: -100rpx;
  top: 0;
  z-index: 10;
  /* transition: all 0.5s; */
}
