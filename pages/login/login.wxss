.main-container {
  display: flex;
  flex-flow: column nowrap;
}

.title {
  margin-top: 200rpx;
  font-size: 20px;
  font-weight: 800;
  text-align: center;
}

.input-box input {
  width: 500rpx;
  margin: 0 auto;
  margin-top: 100rpx;
  border-bottom: 1px solid #ddd;
}

.button {
  width: 500rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background-color: rgb(250, 141, 55);
  border-radius: 100rpx;
}
