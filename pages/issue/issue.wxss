/* issue.wxss */
view{
  box-sizing: border-box;
}
.container{
  width: 100%;
  overflow: hidden;
}
.border{
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}

.title{
  margin-top: 46rpx;
  padding: 0 20rpx;
  width: 100%;
  height: 88rpx;
  font-size: 17px;
  line-height: 86rpx;
}
.title text{
  font-weight: 600;
  line-height: 86rpx;
}
.title input{
  margin-left: 20rpx; 
  height: 86rpx;
  width: 550rpx;
}

textarea{
  margin-top: 10rpx;
  padding: 20rpx;
  width: calc(100% - 40rpx);
  height: 245rpx;
  font-size: 17px;
}

.add_image{
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  padding: 30rpx 20rpx;
  margin-top: 10rpx;
}
.add_image image{
  width: 114rpx;
  height: 114rpx;
  margin-right: 10rpx;
}

.add_btn{
  position: relative;
  width: 114rpx;
  height: 114rpx;
  border: 1rpx solid #e5e5e5;
}
.add_btn::before{
  position: absolute;
  top: 56rpx;
  left: 30rpx;
  content: "";
  display: block;
  height: 4rpx;
  width: 55rpx;
  background-color: #e5e5e5;
}
.add_btn::after{
  position: absolute;
  top: 56rpx;
  left: 30rpx;
  content: "";
  display: block;
  height: 4rpx;
  width: 55rpx;
  transform: rotate(90deg);
  background-color: #e5e5e5;
}

.address{
  margin-top: 10rpx;
  padding: 0 20rpx;
  width: 100%;
  height: 88rpx;
  font-size: 17px;
  line-height: 86rpx;
}
.tel{
  padding: 0 20rpx;
  width: 100%;
  height: 88rpx;
  font-size: 17px;
  line-height: 86rpx;
  border-bottom: 1rpx solid #e5e5e5;
} 
.address text,
.tel text{
  font-weight: 600;
  line-height: 86rpx;
}
.address input,
.tel input{
  margin-left: 20rpx; 
  height: 86rpx;
  width: 550rpx;
}
.price{
  padding: 20rpx 20rpx;
  width: 100%;
  font-size: 17px;
  border-bottom: 1rpx solid #e5e5e5;
}
.price text{
  line-height: 44rpx;
}
.price input{
  margin-left: 20rpx; 
  height: 44rpx;
  width: 50rpx;
  border: 1rpx solid #e5e5e5;
}
